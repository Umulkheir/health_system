  </div>

  <div class="form-group">
    <%= f.label :physicals %>
    <%= f.text_area :physicals, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :prescription %>
    <%= f.text_area :prescription, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
