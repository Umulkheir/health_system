<div class="table-agile-info">
  <div class="panel panel-default">
    <div class="panel-heading">
      Details
    </div>    
    <div class='panel-body'>
      <div class='row'> 
        <div class='col-lg-12'>
          <a href=<%= "/patients/#{@patient.id}/edit" %> class='pull-right btn btn-success'>Edit patient</a>

        </div>
      </div>
      <hr>
      <div class= 'row'>
        <div class='col-lg-3' >
          <i class="fa fa-user" aria-hidden="true"></i>
          <%= @patient.name %>
        </div>
        <div class='col-lg-3' >
          <i class="fa fa-envelope" aria-hidden="true"></i>
          <%= @patient.email %>
        </div>
        <div class='col-lg-3' >
          <i class="fa fa-phone" aria-hidden="true"></i>
          <%= @patient.phone_number %>
        </div>
        <div class='col-lg-3' >
          <i class="fa fa-venus-mars" aria-hidden="true"></i>
          <%= @patient.gender %>
        </div>
      </div>
      <hr>
      <table class='table table-bordered'>
        <thead>
          <tr>
            <th>Symptoms</th>
            <th>Diagnosis</th>
            <th>Test</th>
            <th>Phsicals</th>
            <th>Prescription</th>
          </tr>
        </thead>

        <tbody>
          <% @patient.patient_histories.each do |detail| %>
            <tr>
              <td><%= detail.symptoms %></td>
              <td><%= detail.diagnosis %></td>
              <td><%= detail.tests %></td>
              <td><%= detail.physicals%></td>
              <td><%= detail.prescription %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Add Patient History', "/patient_histories/new?patient=#{@patient.id}", class: 'btn btn-success' %>
    </div>
  </div>
</div>