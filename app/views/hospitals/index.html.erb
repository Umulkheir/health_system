<div class="table-agile-info">
  <div class="panel panel-default">
    <div class="panel-heading">
      Hospitals
    </div>

    <table class='table table-bordered'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Description</th>
          <th>Approved</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @hospitals.each do |hospital| %>
          <tr>
            <td><%= hospital.name %></td>
            <td><%= hospital.location %></td>
            <td><%= hospital.description %></td>
            <td><%= hospital.approved %></td>
            <td><%= link_to 'Show', hospital %></td>
            <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
            <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Hospital', new_hospital_path %>

  </div>
</div>